<div class="article-pagination">
  {% set previousPost = collections.post | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.post | getNextCollectionItem(page) %}
  {% if previousPost %}
    <a href="{{ previousPost.url }}">Previous:&nbsp;{{ previousPost.data.title }}</a>
  {% endif %}
  {% if nextPost %}
    <a href="{{ nextPost.url }}">
      Next:&nbsp;{{ nextPost.data.title }}</a>
  {% endif %}
</div>
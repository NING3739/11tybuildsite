---
layout: base.njk
permalink: /blog/{{ category.slug }}/index.html
pagination:
  data: collections.categories
  size: 1
  alias: category
eleventyComputed: 
  title: Blog entries with "{{ category.title }}" category
---

<div class="blog-category">
  <h1 class="blog-category-title">{{ title }}</h1>
  <ol class="blog-category-list">
    {% for post in category.posts | reverse %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <i>{{ post.date | postDate }}</i>
      </li>
    {% endfor %}
  </ol>
</div>